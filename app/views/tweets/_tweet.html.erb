<div class="px-6 py-3 border-b" id="<%= dom_id(tweet) %>">
  <div class="flex space-x-3 items-start">
    <div class="flex-shrink-0">
      <%= profile_image(tweet.user) %>
    </div>
    <div class="flex-1">
      <div class="space-x-1.5">
      <p class="font-bold float-left pr-1"><%= link_to tweet.user.name, profile_path(tweet.user), class: "hover:underline", data: {turbo: false} %></p>
      <% if tweet.created_at.strftime("%d") == Time.now.strftime("%d") %>
      <p class="">• <%= time_ago_in_words(tweet.created_at) %> ago</p>
      <% else %>
      <p class="">• <%= tweet.created_at.strftime("#{tweet.created_at.day.ordinalize} %B") %></p>
      <% end %>
      </div>
      <%= link_to tweet, data: {turbo: false} do %>
        <div class="prose prose-lg"><%= tweet.body %></div>
      <% end %>
      <%= render "tweets/controls", tweet: tweet %>
    </div>
  </div>
</div>